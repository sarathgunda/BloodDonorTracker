        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BloodBank">
        <activity android:name=".DisplayDonorsActivity"/>
        <activity android:name=".DispalyRequestsActivity" />
        <activity android:name=".RegisterIIIActivity" />
        <activity android:name=".RegisterIIActivity" />
        <activity android:name=".RegisterIActivity" />
        <activity android:name=".LoginScreenActivity" />
